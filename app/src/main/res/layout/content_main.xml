            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cvT"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                card_view:cardCornerRadius="1dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardElevation="2dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/vPlanTodayTitle"
                        android:textSize="20sp"
                        android:text="Vertretungen Heute"
                        android:layout_marginBottom="5dp"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/vPlanTodayTitle"
                        android:id="@+id/vPlanToday"
                        android:stretchColumns="*"
                        android:text="Vertretungen Heute">
                        <ProgressBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:indeterminate="true"/>
                        <TextView
                            android:text="Entweder bist du nicht angemeldet, oder deine Internetverbindung ist langsam.\nEs wird versucht den Vertretungsplan zu laden.."/>
                    </TableLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
