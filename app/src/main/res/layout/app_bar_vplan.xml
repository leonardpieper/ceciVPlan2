            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="changeStufe"
            android:src="@drawable/ef"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorAccent"
            fab:fab_size="mini" />

