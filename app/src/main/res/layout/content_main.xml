                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/vPlanTomorrow"
                        android:layout_below="@+id/vPlanTomorrowTitle"
                        android:stretchColumns="*"
                        android:text="Vertretungen morgen">

                        <ProgressBar
