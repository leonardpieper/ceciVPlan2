<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.leonardpieper.ceciVPlan.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="1dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:id="@+id/tvLogInUser"
                    android:text="Hallo, "
                    android:singleLine="true"
                    android:maxLines="1"
                    android:visibility="gone"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:id="@+id/etUname"
                    android:inputType="textEmailAddress"
                    android:hint="E-Mail"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/etPwd"
                    android:inputType="textPassword"
                    android:hint="Passwort"/>


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jahrgangsstufe"
                    android:textSize="16dp"
                    android:id="@+id/btnSpinnerJahrgang"
                    style="?android:attr/spinnerStyle" >
                </Button>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnLogin"
                        android:layout_alignParentLeft="true"
                        android:text="Anmelden"
                        android:textColor="@color/colorAccent"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnAdvanced"
                        android:layout_alignParentRight="true"
                        android:text="Erweiterte Optionen"
                        android:visibility="gone"
                        android:enabled="false"
                        style="?android:attr/borderlessButtonStyle"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/btnLogout"
                        android:layout_alignParentLeft="true"
                        android:text="Abmelden"
                        android:textColor="@color/colorAccent"
                        android:visibility="gone"
                        style="?android:attr/borderlessButtonStyle"/>
                </RelativeLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="1dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSignUpNew"
                    android:text="Neuen Nutzer erstellen"
                    android:textColor="@color/colorAccent"
                    android:drawableRight="@drawable/ic_arrow_forward_accent_24dp"
                    style="?android:attr/borderlessButtonStyle"/>/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="1dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="2dp"
            android:id="@+id/cvVPlanCred"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/set_vplanU"
                    android:hint="Vertretungsplan-Benutzername"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/set_vplanPwd"
                    android:inputType="textPassword"
                    android:hint="Vertretungsplan-Passwort"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/set_btnSetVPlan"
                    android:text="Best채tigen"
                    android:textColor="@color/colorAccent"
                    android:visibility="visible"
                    style="?android:attr/borderlessButtonStyle"/>/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/cvTeacher"
            android:visibility="gone"
            card_view:cardCornerRadius="1dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:id="@+id/etLehrerkrzl"
                    android:inputType="text"
                    android:hint="Lehrerk체rzel (z.B. Mug)" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnSave"
                    android:layout_alignParentRight="true"
                    android:text="Best채tigen" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            card_view:cardCornerRadius="1dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnDriveLink"
                    android:text="  Mit Google Drive verkn체pfen"
                    android:textColor="@color/colorAccent"
                    android:drawableLeft="@drawable/ic_drive_logo"
                    android:visibility="gone"
                    style="?android:attr/borderlessButtonStyle"/>/>

            </LinearLayout>

        </android.support.v7.widget.CardView>




    </LinearLayout>

</RelativeLayout>
